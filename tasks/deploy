# Build and deploy to static site github repo.

./tasks/jekyll 
sleep 1

message=$(git log -1 --pretty=%B)

cd ~/Repositories/compasscontracting.com
git checkout gh-pages
git branch -D gh-pages-me
git pull
git checkout -b gh-pages-me

cd ~/Repositories/compasscontracting.com-jekyll
rsync -az --delete --exclude '.git' _site/ ~/Repositories/compasscontracting.com 

cd ~/Repositories/compasscontracting.com
git add . 
echo "Using commit message:"
echo "$message"
git commit -m "$message"
git checkout gh-pages
git merge gh-pages-me
git push origin gh-pages
git checkout gh-pages-me
